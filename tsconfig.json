{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "esnext",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "target": "es2018",
    "lib": [
      "esnext",
      "dom"
    ],
    "paths": {
      "*": [
        "src/*"
      ]
    },
    "moduleResolution": "node",
    "baseUrl": ".",
    "allowJs": true
  },
  "exclude": [
    "node_modules",
    "aurelia_project/**/*.json",
    "x-scratch",
    "dist",
    "coverage",
    "test/e2e"
  ],
  "atom": {
    "rewriteTsconfig": false
  }
}
